@model IEnumerable<Cateogry>
@{
    ViewData["Title"] = "Index";
}   


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Index For Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>


<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model) {
            <tr>
                <td style="width:70%">@obj.Name</td>
                <td style="width:30%">@obj.DisplayOrder</td>
            </tr>
            
        }
        
    </tbody>
</table>
</div>